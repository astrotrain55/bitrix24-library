{
  "name": "bitrix24-library",
  "description": "Promise-wrapper for JavaScript REST API Bitrix24 and a set of new methods",
  "version": "0.1.2",
  "license": "GPL",
  "type": "module",
  "files": [
    "dist",
    "types"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.umd.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vdistortion/bitrix24-library.git"
  },
  "keywords": [
    "api",
    "rest",
    "promises",
    "typescript",
    "bitrix24",
    "bx24"
  ],
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 4200",
    "build": "tsc && vite build",
    "public": "npm run build && npm publish",
    "format": "prettier . --write"
  },
  "dependencies": {
    "is-mobile": "^4.0.0"
  },
  "devDependencies": {
    "prettier": "3.3.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.7"
  }
}
